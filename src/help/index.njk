---
layout: layouts/default.njk
permalink: '/help/{% if pagination.pageNumber > 0 %}{{ pagination.pageNumber + 1 }}/{% endif %}/'
---

<section class="container mx-auto">
	<h1 class="text-center text-6xl font-light">Learn how to use <strong class="font-bold text-primary-500">DefiPlaza</strong></h1>

	<div class="relative mt-16 p-20 pt-4 bg-primary-700 rounded-3xl overflow-hidden">
		<div class="oval-gradient -top-80 -left-80"></div>

		{%- from "macros/card.njk" import card -%}

		{% for section in helpsections %}
			<h2 class="text-4xl text-white px-8 mt-16 mb-8 relative">{{ section.name }}</h2>	
			<div class="grid grid-cols-3 gap-4">
				{% for post in helps | category(section.id) %}
					{{ card({
							title: post.title.rendered,
							text: [post._embedded.author[0].name, " - ", post.date | wpDateToString] | join,
							url: ["/help/", post.slug] | join
						})
					}}
				{% endfor %}
			</div>	
		{% endfor %}
		
	</div>
</section>