		</div>
		<ul class="md:w-3/5 mx-4 md:mx-auto mt-10 px-4 md:px-8 bg-white rounded-lg divide-y divide-primary">
			{% for post in posts %}
				<li class="py-8">
					<h3 class="text-primary-dark font-bold text-2xl">
						<a href="/blog/{{ post.slug }}">{{ post.title.rendered | safe }}</a>
					</h3>
					<p class="text-primary text-xs mt-2">{{ post._embedded.author[0].name }} - {{ post.date | htmlDateString }}</p>
					<div class="mt-2">{{ post.excerpt.rendered | safe }}</div>
				</li>
			{% endfor %}
		</ul>
